# Production Environment Configuration
# WARNING: Do NOT commit this file with real credentials!
# In production, use Kubernetes secrets instead

ENVIRONMENT=production
DEBUG=false

# Database - Production PostgreSQL
# These should be loaded from Kubernetes secrets
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=crypto_production
DB_USER=ml_pipeline_user
DB_PASSWORD=${SECRET_DB_PASSWORD}

# MinIO - Production S3/MinIO
MINIO_ENDPOINT=minio-service:9000
MINIO_ACCESS_KEY=${SECRET_MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${SECRET_MINIO_SECRET_KEY}
MINIO_SECURE=true

# Redis - Production Redis
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${SECRET_REDIS_PASSWORD}

# MLflow - Production MLflow server
MLFLOW_TRACKING_URI=http://mlflow-tracking:5000
MLFLOW_EXPERIMENT_PREFIX=crypto_multi_models_prod

# DVC - Production S3
DVC_REMOTE_NAME=s3
DVC_REMOTE_URL=s3://ml-pipeline-dvc-prod
DVC_ACCESS_KEY_ID=${SECRET_AWS_ACCESS_KEY}
DVC_SECRET_ACCESS_KEY=${SECRET_AWS_SECRET_KEY}

# Binance API
BINANCE_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,SOLUSDT,XRPUSDT,DOTUSDT,AVAXUSDT,MATICUSDT,LINKUSDT

# API Server - Production mode
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=8
API_RELOAD=false
API_LOG_LEVEL=info
API_CORS_ORIGINS=https://your-production-domain.com
API_RATE_LIMIT=1000/minute

# Monitoring - Enabled for production
MONITORING_PROMETHEUS_PUSHGATEWAY=prometheus-pushgateway:9091
MONITORING_SENTRY_DSN=${SECRET_SENTRY_DSN}
MONITORING_LOG_LEVEL=INFO
MONITORING_ENABLE_METRICS=true
MONITORING_ENABLE_TRACING=true
