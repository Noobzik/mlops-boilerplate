# ==============================================================================
# ML Pipeline Configuration Template
# ==============================================================================
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values.
#
# Usage:
#   - Local development: cp .env.example .env.development
#   - Staging: cp .env.example .env.staging
#   - Production: Use Kubernetes secrets (see k8s/secrets.yaml)
# ==============================================================================

# ------------------------------------------------------------------------------
# Environment
# ------------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=varunrajput
DB_PASSWORD=your_secure_password_here

# ------------------------------------------------------------------------------
# MinIO/S3 Configuration
# ------------------------------------------------------------------------------
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_SECURE=false
MINIO_BUCKET_MODELS=crypto-models
MINIO_BUCKET_FEATURES=crypto-features
MINIO_BUCKET_DATA_VERSIONS=crypto-data-versions

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# MLflow Configuration
# ------------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://mlflow-tracking:5000
MLFLOW_EXPERIMENT_PREFIX=crypto_multi_models
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts

# ------------------------------------------------------------------------------
# DVC Configuration
# ------------------------------------------------------------------------------
DVC_REMOTE_NAME=minio
DVC_REMOTE_URL=s3://dvc-storage
DVC_ACCESS_KEY_ID=admin
DVC_SECRET_ACCESS_KEY=your_dvc_secret_key_here
DVC_ENDPOINT_URL=http://minio:9000

# ------------------------------------------------------------------------------
# Binance API Configuration
# ------------------------------------------------------------------------------
BINANCE_BASE_URL=https://api.binance.com/api/v3/klines
# Note: Use JSON array format for list values
BINANCE_SYMBOLS=["BTCUSDT","ETHUSDT","BNBUSDT","ADAUSDT","SOLUSDT","XRPUSDT","DOTUSDT","AVAXUSDT","MATICUSDT","LINKUSDT"]
BINANCE_INTERVAL=15m

# ------------------------------------------------------------------------------
# API Server Configuration
# ------------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_LOG_LEVEL=info
# Note: Use JSON array format for list values
API_CORS_ORIGINS=["*"]
API_RATE_LIMIT=100/minute

# ------------------------------------------------------------------------------
# Monitoring Configuration
# ------------------------------------------------------------------------------
MONITORING_PROMETHEUS_PUSHGATEWAY=prometheus-pushgateway:9091
MONITORING_SENTRY_DSN=
MONITORING_LOG_LEVEL=INFO
MONITORING_ENABLE_METRICS=true
MONITORING_ENABLE_TRACING=false
