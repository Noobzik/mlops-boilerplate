# Development Environment Configuration
# This file contains default development settings
# Override these values for your local setup

ENVIRONMENT=development
DEBUG=true

# Database - Local PostgreSQL
DB_HOST=host.docker.internal
DB_PORT=5432
DB_NAME=postgres
DB_USER=varunrajput
DB_PASSWORD=yourpassword

# MinIO - Local MinIO instance
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123
MINIO_SECURE=false

# Redis - Local Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# MLflow - Local MLflow server
MLFLOW_TRACKING_URI=http://mlflow-tracking:5000
MLFLOW_EXPERIMENT_PREFIX=crypto_multi_models

# DVC - Local MinIO as DVC remote
DVC_REMOTE_NAME=minio
DVC_REMOTE_URL=s3://dvc-storage
DVC_ACCESS_KEY_ID=admin
DVC_SECRET_ACCESS_KEY=admin123
DVC_ENDPOINT_URL=http://minio:9000

# Binance API (use JSON array format for lists)
BINANCE_SYMBOLS=["BTCUSDT","ETHUSDT","BNBUSDT","ADAUSDT","SOLUSDT","XRPUSDT","DOTUSDT","AVAXUSDT","MATICUSDT","LINKUSDT"]

# API Server - Development mode
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RELOAD=true
API_LOG_LEVEL=debug

# Monitoring - Disabled for local development
MONITORING_ENABLE_METRICS=false
MONITORING_LOG_LEVEL=DEBUG
